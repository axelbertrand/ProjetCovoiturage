{% extends 'base.html.twig' %}

{% block title %}Paiement - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Paiement de la réservation de {{ reservation.departurePublication.departureCity }} vers {{ reservation.departurePublication.arrivalCity }}</h1>

    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Date et heure de départ</th>
                <th scope="col">Nombre de places restantes</th>
				<th scope="col">Espace fumeur</th>
				<th scope="col">Téléphone du conducteur</th>
				<th scope="col">Mail du conducteur</th>
				<th scope="col">Espace pour les bagages</th>
                <th scope="col">Places réservées</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ reservation.departurePublication.departureDateTime|date('m/d/Y h:i:s') }}</td>
                <td>{{ reservation.departurePublication.remainingSeats }}</td>
                <td>{{ reservation.departurePublication.user.canSmoke ? 'Oui' : 'Non' }}</td>
                <td>{{ reservation.departurePublication.user.canAccessDriverPhoneNumber ? 'Oui' : 'Non' }}</td>
                <td>{{ reservation.departurePublication.user.canAccessDriverEmail ? 'Oui' : 'Non' }}</td>
                <td>{{ reservation.departurePublication.user.canPutSuitcase ? 'Oui' : 'Non' }}</td>
                <td>{{ reservation.numberOfSeats }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment') }}" class="btn btn-success">Confirmer le paiement ($5)</a>
{% endblock %}
