{% extends 'base.html.twig' %}

{% block title %}Mes publications - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Mes publications</h1>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Ville de départ</th>
                <th scope="col">Ville d'arrivée</th>
                <th scope="col">Date et heure de départ</th>
                <th scope="col">Nombre de places restantes</th>
            </tr>
        </thead>
        <tbody>
            {% for departurePublication in app.user.departurePublications %}
                <tr>
                    <td>{{ departurePublication.departureCity }}</td>
                    <td>{{ departurePublication.arrivalCity }}</td>
                    <td>{{ departurePublication.departureDateTime|date('m/d/Y') }}</td>
                    <td>{{ departurePublication.remainingSeats }}</td>
                </tr>
            {% else %}
                <td colspan="4"><em class="d-block text-center">Aucune publication trouvée</em></td>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
